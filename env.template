# AutoAssistGroup Support System - Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/support_tickets

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Domain Configuration
DOMAIN_NAME=your-domain.com

# Security
SESSION_TIMEOUT=3600
RATE_LIMIT_ENABLED=True

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB
UPLOAD_FOLDER=/opt/autoassist/uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/autoassist/logs/app.log

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
TIMEOUT=120

# Cache Configuration (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here
